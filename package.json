{
  "name": "maldives-dream",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3333",
    "postinstall": "prisma generate",
    "build": "next build",
    "start": "next start -p 3333",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:studio": "prisma studio --port 5555",
    "db:reset": "prisma migrate reset --force",
    "infra:up": "docker compose up -d db minio minio-init",
    "infra:down": "docker compose down",
    "infra:logs": "docker compose logs -f db minio",
    "setup": "docker compose up -d db minio minio-init && echo 'Waiting for DB...' && sleep 3 && npx prisma generate && npx prisma db push && npx tsx prisma/seed.ts && echo 'Ready! Run: npm run dev'"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@aws-sdk/client-s3": "^3.988.0",
    "@aws-sdk/s3-request-presigner": "^3.988.0",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "bcryptjs": "^3.0.3",
    "coinbase-commerce-node": "^1.0.4",
    "csv-stringify": "^6.6.0",
    "date-fns": "^4.1.0",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.3",
    "next": "16.1.6",
    "next-auth": "^4.24.13",
    "nodemailer": "^7.0.13",
    "pg": "^8.18.0",
    "prisma": "^7.4.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "resend": "^6.9.2",
    "sharp": "^0.34.5",
    "slugify": "^1.6.6",
    "stripe": "^20.3.1",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.9",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "lucide-react": "^0.563.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
